<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilmFinder.HistoryPage"
             Title="Son Öneriler">

    <Grid RowDefinitions="Auto, *, Auto" Padding="20">
        
        <CollectionView x:Name="HistoryList" Margin="0,10" Grid.Row="1">
            
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                    <Label Text="Geçmişinizde önerilen film bulunamadı." 
                           FontSize="18" 
                           TextColor="Gray" 
                           HorizontalTextAlignment="Center"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10" Padding="10" BackgroundColor="#f9f9f9" BorderColor="#e0e0e0" CornerRadius="10">
                        <HorizontalStackLayout Spacing="15">
                    
                            <Frame CornerRadius="5" Padding="0" IsClippedToBounds="True" HeightRequest="80" WidthRequest="55">
                                <Image Source="{Binding ImagePath}" Aspect="AspectFill"/>
                            </Frame>

                            <VerticalStackLayout VerticalOptions="Center">
                                <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" TextColor="#333"/>
                                <Label Text="{Binding Mood}" FontSize="12" TextColor="Gray"/>
                                <Label Text="{Binding Theme}" FontSize="12" TextColor="Gray"/>
                            </VerticalStackLayout>

                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="2"
                Text="Geçmişi Temizle" 
                x:Name = "ClearHistoryBtn"
                BackgroundColor="#282e9c" 
                TextColor="White"
                Clicked="OnClearHistoryClicked"
                Margin="0,20"/>
        
    </Grid>
</ContentPage>