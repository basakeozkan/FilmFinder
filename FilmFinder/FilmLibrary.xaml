<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilmFinder.FilmLibrary"
             Title="Film Kütüphanesi">

    <Grid RowDefinitions="Auto, *">
        
        <Label Grid.Row="0" 
               Text="Tüm Filmler" 
               FontSize="24" 
               FontAttributes="Bold" 
               Margin="20,10" 
               HorizontalOptions="Center"/>

        <CollectionView Grid.Row="1" 
                        x:Name="LibraryList" 
                        Margin="10"
                        VerticalScrollBarVisibility="Always"> <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="15" CornerRadius="10" BorderColor="#D1D1D1">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding Mood}" FontSize="13" TextColor="Gray"/>
                                <Label Text="|" TextColor="LightGray"/>
                                <Label Text="{Binding Theme}" FontSize="13" TextColor="Gray"/>
                                <Label Text="|" TextColor="LightGray"/>
                                <Label Text="{Binding Length}" FontSize="13" TextColor="Gray"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>