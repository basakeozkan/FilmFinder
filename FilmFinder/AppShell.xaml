<Shell
    x:Class="FilmFinder.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FilmFinder"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarForegroundColor="#6509b5"
    Shell.TabBarTitleColor="#6509b5">
    <TabBar>
        <Tab Title="Bana Film Bul" Icon="findme.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

        <Tab Title="Keşfet"  Icon="film.png">
            <ShellContent ContentTemplate="{DataTemplate local:FilmLibrary}" />
        </Tab>
        
        <Tab Title="Geçmiş" Icon="history.png">
            <ShellContent ContentTemplate="{DataTemplate local:HistoryPage}" />
        </Tab>
    </TabBar>

</Shell>