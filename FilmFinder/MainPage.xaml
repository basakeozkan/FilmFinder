<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilmFinder.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            
            <Image
                Source="logo.png"
                HorizontalOptions="Center"
                WidthRequest="250"
                HeightRequest="150"
                Margin="0,10"/>
            
            <Frame CornerRadius="10" Padding="15" Margin="10" BackgroundColor="#f8f8f8" BorderColor="#cccccc">
                <StackLayout Spacing="10">
                    <Label x:Name="QuestionLabel" Text="" FontSize="18"/>
                    <Picker x:Name="AnswerPicker" 
                            Title="Seçmek istemiyorum"
                            SelectedIndexChanged="OnAnswerPickerSelectedIndexChanged"/>
                </StackLayout>
            </Frame>

            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ok butonları --> 
                <Button Text="‹" FontSize="20" WidthRequest="40" HeightRequest="40"
                        BackgroundColor="#64c479" TextColor="White"
                        Grid.Column="0"
                        Clicked="OnPreviousQuestionClicked"/>

                <BoxView Grid.Column="1" BackgroundColor="Transparent"/> 

                <Button Text="›" FontSize="20" WidthRequest="40" HeightRequest="40"
                        BackgroundColor="#64c479" TextColor="White"
                        Grid.Column="2"
                        Clicked="OnNextQuestionClicked"/>
            </Grid>

            

            <!-- film bul butonu -->
            <Button Text="Bana Film Bul"
                    Clicked="OnFindFilmClicked"/>

            <!-- sonuç -->
            <Label x:Name="ResultLabel"
                   FontSize="20" />

            <!-- geçmiş -->
            <Label Text="Geçmiş Öneriler"
                   FontSize="16"
                   FontAttributes="Bold"/>

            <Label x:Name="HistoryLabel"
                   FontSize="13"
                   TextColor="Gray"/>
            
            <Button Text="Geçmişi Temizle"
                    BackgroundColor="#64c479"
                    FontSize="14"
                    Clicked="OnClearHistoryClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
